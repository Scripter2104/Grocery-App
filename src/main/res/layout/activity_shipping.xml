<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".order.ShippingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/crossButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cross"
            tools:ignore="RtlHardcoded">

        </Button>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="SHIPPING"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        tools:ignore="UselessLeaf">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:text="     ADD NEW ADDRESS"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,RtlHardcoded">

        </TextView>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/arrow"
            tools:ignore="RtlHardcoded">

        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/defaultAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="\n \n  17 shivdas nagar \n \tYash Solanki \n \tManjalpur,Vadodara \n \t17 shivdas nagar opposite Bhavan's School, \n \tVadodara, GJ 390009 \n \tIndia \n \t+919173830753"
            android:textSize="15dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>


        <RadioButton
            android:id="@+id/defaultRadioButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="320dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>
        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="177dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        tools:ignore="UselessLeaf">

        <Button
            android:id="@+id/currentLocationButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/location_color"
            android:textColor="@color/white"
            android:text="Use current location"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/location"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage">

        </Button>

        <TextView
            android:id="@+id/liveLocationTextView"
            android:layout_width="270dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            >

        </TextView>

        <RadioButton
            android:id="@+id/liveLocationRadioButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="320dp"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="UselessLeaf">

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:background="@color/black"
            android:text="USE SELECTED"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">


        </Button>

    </RelativeLayout>


</LinearLayout>