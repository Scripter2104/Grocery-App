<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/intro"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#e4e4e4"
        tools:ignore="UselessLeaf">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Welcome to       "
            android:textColor="#fcc201"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage">

        </TextView>

        <TextView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginLeft="313dp"
            android:gravity="center"
            android:text="it"
            android:textColor="#028a0f"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="245.5dp"
            android:gravity="center"
            android:text="blink"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>


        <Button
            android:id="@+id/loginButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_2_color"
            android:text="login"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/empty_button_border"
            android:text="Sign up"
            android:textColor="#FCC201"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <TextView
            android:id="@+id/adminAccess"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:text="Admin Access"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>


    </RelativeLayout>


</LinearLayout>