<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".payment.PaymentTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PAYMENT"
            android:gravity="center|left"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <Button
            android:id="@+id/crossButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cross"
            tools:ignore="RtlHardcoded">

        </Button>

        <Button
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/arrow"
            android:rotation="180"
            tools:ignore="RtlHardcoded">

        </Button>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PAYMENT OPTION"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="UselessLeaf">
        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="85dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="UPI AND CARDS"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <RadioButton
            android:id="@+id/upiButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="310dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="UselessLeaf">

        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="85dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />

        <RadioButton
            android:id="@+id/netBankingButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="310dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="NET BANKING (EXTRA 5% OFF)"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="CASH ON DELIVERY-SHIPPING FEES RS.49"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="85dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />

        <RadioButton
            android:id="@+id/codButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="310dp"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="invisible"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">


        </Button>

    </RelativeLayout>

</LinearLayout>