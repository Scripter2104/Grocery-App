<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".payment.PaymentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SHIPPING AND BILLING"
            android:gravity="center|left"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <Button
            android:id="@+id/crossButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cross"
            tools:ignore="RtlHardcoded">

        </Button>

        <Button
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/arrow"
            android:rotation="180"
            tools:ignore="RtlHardcoded">

        </Button>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="SHIPPING ADDRESS"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="340dp"
            android:background="@drawable/green_tick"
            android:layout_marginTop="5dp"
            tools:ignore="ContentDescription,RtlHardcoded">

        </ImageView>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            tools:ignore="RtlHardcoded">

        </TextView>

        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="197dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        tools:ignore="UselessLeaf">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="BILLING ADDRESS"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/green_tick"
            tools:ignore="ContentDescription,RtlHardcoded">

        </ImageView>

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:checked="true"
            tools:ignore="RtlHardcoded">

        </CheckBox>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="55dp"
            android:text="Same as shipping address"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded">

        </TextView>

        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="117dp"
            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:text="SHIPPING SERVICE"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center|left"
            android:text="Standard: â‚¹ 0.00"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <RadioButton
            android:id="@+id/defaultRadioButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="330dp"
            android:checked="true"
            tools:ignore="RtlHardcoded,UnusedAttribute">

        </RadioButton>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        tools:ignore="UselessLeaf">

        <View
            android:layout_width="320dp"
            android:layout_height="1sp"
            android:layout_marginLeft="21dp"

            android:background="#000000"
            tools:ignore="RtlHardcoded,SmallSp" />

        <CheckBox
            android:id="@+id/smsCheckBox"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            tools:ignore="RtlHardcoded">

        </CheckBox>

        <TextView
            android:id="@+id/smsUpdate"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="Please send me SMS shipping updates about my order"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:background="@color/black"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">


        </Button>


    </RelativeLayout>



</LinearLayout>