<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8sp"
        android:padding="3sp"
        app:cardBackgroundColor="#76ABAE"
        app:cardCornerRadius="30sp"
        app:cardElevation="20sp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            tools:ignore="ContentDescription,RtlHardcoded">

        </ImageView>

        <TextView
            android:id="@+id/tvGroceryName"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:hint="Name of Grocery"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <TextView
            android:id="@+id/tvGroceryPrice"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:hint="Price Of Grocery"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>


        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:hint="Unit"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </TextView>

        <Button
            android:id="@+id/btAdd"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="150dp"
            android:text="+"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/button_color"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </Button>


        <Button
            android:id="@+id/btSubtract"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:text="-"
            android:textSize="20dp"
            android:background="@drawable/button_color"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage">

        </Button>

        <EditText
            android:id="@+id/quantity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="140dp"
            android:hint="QTY"
            android:editable="false"
            android:gravity="center"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields">

        </EditText>


    </androidx.cardview.widget.CardView>

</RelativeLayout>